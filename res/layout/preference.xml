<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:background="@drawable/home_gradient">
		<ListView android:id="@+id/pref_channel_list"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:visibility="gone" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:text="@string/msg_pref_channel_empty"
			android:textSize="22sp" />
	</LinearLayout>
	<com.sosceo.android.ads.AdView
		android:id="@+id/ad" android:layout_gravity="bottom"
		android:layout_width="fill_parent" android:textColor="#FFFFFF"
		android:background="@android:color/transparent" android:layout_height="50px" />

</FrameLayout>
